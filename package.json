{
  "name": "@iblai/iblai-sdk",
  "version": "1.0.0",
  "description": "TypeScript SDK for IBL AI Platform - Unified package for data layer, utilities, and React components",
  "private": true,
  "keywords": [
    "iblai",
    "sdk",
    "typescript",
    "react",
    "data-layer",
    "web-utils",
    "components"
  ],
  "author": "IBL AI <dev@ibl.ai>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iblai/iblai-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/iblai/iblai-sdk/issues"
  },
  "homepage": "https://github.com/iblai/iblai-sdk#readme",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "build": "pnpm --filter @iblai/iblai-js build",
    "watch": "pnpm --filter @iblai/iblai-js watch",
    "typecheck": "pnpm --filter @iblai/iblai-js typecheck",
    "clean": "pnpm --filter @iblai/iblai-js clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm build && changeset publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "3.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "storybook": "^8.6.14",
    "turbo": "2.5.3",
    "typescript": "^5.9.3",
    "vite": "^6.0.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "react": "19.1.0",
      "react-dom": "19.1.0"
    }
  }
}
